<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login"
    android:fillViewport="true"
    android:background="@color/backgroundLight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor centrado y un poco mÃ¡s abajo -->
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintWidth_percent="0.92"
            app:layout_constraintWidth_max="380dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.35">  <!-- ðŸ‘ˆ baja el bloque -->


            <!-- Logo del colegio -->
            <ImageView
                android:id="@+id/logoColegio"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_colegio"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/logo_colegio"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:textColor="@color/textPrimary"
                android:textSize="34sp"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <!-- SubtÃ­tulo -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_subtitle"
                android:textColor="@color/hintColor"
                android:textSize="15sp"
                android:paddingBottom="32dp" />

            <!-- Usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsuario"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_usuario"
                android:layout_marginBottom="18dp"
                app:startIconDrawable="@drawable/ic_person_24"
                app:startIconTint="@color/hintColor"
                app:boxStrokeColor="@color/fieldStroke"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintColor"
                    android:textSize="16sp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingStart="36dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_contrasena"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="@color/hintColor"
                app:boxStrokeColor="@color/fieldStroke"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintColor"
                    android:textSize="16sp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingStart="36dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- BotÃ³n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcceder"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="@string/btn_acceder"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/colorPrimary" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
